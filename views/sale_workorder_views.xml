<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.actions.act_window" id="action_sale_workorder_form">
      <field name="auto_search" eval="True"/>
      <field name="context">{}</field>
      <field name="groups_id" eval="[(6, 0, [])]"/>
      <field name="limit">80</field>
      <field name="name">Sale Workorder</field>
      <field name="res_model">sale.workorder</field>
      <field name="target">current</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" eval="False"/>
      <field name="view_ids" eval="[(6, 0, [])]"/>
      <field name="view_mode">form</field>
      <field name="view_type">form</field>
    </record>
    <record model="ir.ui.view" id="view_sale_workorder_form">
        <field name="name">sale.workorder.form</field>
        <field name="model">sale.workorder</field>
        <field name="arch" type="xml">
          <form>
            <sheet>
              <div class="oe_title">
                  <h1>
                      <field name="name" readonly="1"/>
                      <field name="order_id" invisible="1"/>
                  </h1>
              </div>
              <group>
                <group>
                  <field name="requested_date"/>
                  <field name="commitment_date"/>
                </group>
                <group>
                </group>
              </group>
              <notebook>
                <page string="Workorders">
                  <group>
                    <field nolabel="1" name="workorder_ids">
                      <tree editable="bottom">
                        <field name="id"/>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="qty_production"/>
                        <button type="object" name="action_update_mo_qty" string="Update" class="oe_link" attrs="{'invisible': [('state','in',['done','cancel'])]}"/>
                        <field name="qty_producing"/>
                        <field name="qty_produced"/>
                        <field name="workcenter_id"/>
                        <field name="operation_id"/>
                        <field name="state"/>
                        <field name="next_work_order_id"/>
                      </tree>
                    </field>
                  </group>
                </page>
              </notebook>
            </sheet>
          </form>
        </field>
    </record>
  </data>
</odoo>
